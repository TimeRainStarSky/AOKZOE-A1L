#!/bin/sh -e
blk="$1"
shift
if [ "$1" == "start" ]; then
  mkdir /tmp/$blk
  mount -o "uid=$SUDO_UID,gid=$SUDO_GID" /{dev,tmp}/$blk
elif [ "$1" == "stop" ]; then
  umount -l /tmp/$blk
  rmdir /tmp/$blk
else
  trap 'sudo "$0" $blk stop' EXIT
  sudo "$0" $blk start
  cd "/tmp/$blk/$1"
  shift
  "$@"
fi