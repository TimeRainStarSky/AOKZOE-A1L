#!/bin/sh
shopt -s nullglob
MANGOAPP=(/tmp/mangoapp.????????)
MANGOHUD=(/tmp/mangohud.????????)
if [ -L "${MANGOAPP[0]}" ]; then
  for i in "${MANGOAPP[@]}"; do
    [ -s "$i" ] || exit
    rm -f "$i"
    echo preset=0 > "$i"
  done
  pkill -x mangoapp
  for i in "${MANGOHUD[@]}"; do
    [ -s "$i" ] && sed -i "s/preset=[0-9]/preset=5/" "$i"
  done
else
  for i in "${MANGOAPP[@]}"; do
    [ -s "$i" ] || exit
    for j in "${MANGOHUD[@]}"; do
      [ -s $j ] && ln -sf $j "$i"
      break
    done
  done
fi