#!/bin/sh
shopt -s nullglob
MANGOAPP=(/tmp/mangoapp.????????)
if grep -q "^preset=5$" "$MANGOHUD_CONFIGFILE"; then
  pkill -x mangoapp
  sed -i "s/preset=[0-9]/preset=3/" "$MANGOHUD_CONFIGFILE"
else
  sed -i "s/preset=[0-9]/preset=5/" "$MANGOHUD_CONFIGFILE"
  for i in "${MANGOAPP[@]}"; do
    socat -t 1 - GOPEN:$i <<< ""
  done
fi